<CodelistActivity.java>
----------------------------------------------------------------------------------------------------------------------------------------
package sudend48.google.com.codebookapp;

import android.content.Context;
import android.content.DialogInterface;
import android.content.Intent;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.support.v7.app.AlertDialog;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.AdapterView;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ImageView;
import android.widget.ListAdapter;
import android.widget.ListView;
import android.widget.SimpleAdapter;
import android.widget.Toast;

import java.util.ArrayList;
import java.util.HashMap;

public class CodelistActivity extends AppCompatActivity {
    ImageView addbtn;
    ImageView closelistbtn;
    ImageView clearlistbtn;
    ListView codelist;
    Context context;

    View updateLayout;
    LayoutInflater inflater;
    AlertDialog updateDialog;

    EditText Pk;
    EditText Noteedit;
    EditText Idedit;
    EditText Passwordedit;
    ImageView updatebtn;
    ImageView deletebtn;
    ImageView closeupdatebtn;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_codelist);
        addbtn = findViewById(R.id.addbtn);
        closelistbtn = findViewById(R.id.closelistbtn);
        clearlistbtn = findViewById(R.id.clearlistbtn);
        codelist = findViewById(R.id.codelist);
        addbtn.setOnClickListener(click);
        closelistbtn.setOnClickListener(click);
        clearlistbtn.setOnClickListener(click);
        context = CodelistActivity.this;
        inflater = getLayoutInflater();
        updateLayout = inflater.inflate(R.layout.activity_updatecode, null);
        Pk = updateLayout.findViewById(R.id.pk);
        Noteedit = updateLayout.findViewById(R.id.Noteupdate);
        Idedit = updateLayout.findViewById(R.id.Idupdate);
        Passwordedit = updateLayout.findViewById(R.id.Passwordupdate);
        AppdataDAO obj = new AppdataDAO(this);
        SQLiteDatabase db = obj.getReadableDatabase();
        String sql = "select * from codedata";
        Cursor cursor = db.rawQuery(sql, null);
        final ArrayList<HashMap<String, String>> Codelist = new ArrayList<>();
        HashMap<String, String> data;
        while (cursor.moveToNext()) {
            data = new HashMap<>();
            data.put("_id", cursor.getString(0));
            data.put("note", cursor.getString(1));
            data.put("id", cursor.getString(2));
            data.put("password", cursor.getString(3));
            Codelist.add(data);
        }
        cursor.close();
        db.close();
        obj.close();
        ListAdapter adapter = new SimpleAdapter(CodelistActivity.this, Codelist, R.layout.code_list_row,
                new String[]{"_id", "note"},
                new int[]{R.id.rowid, R.id.rownote});
        codelist.setAdapter(adapter);
        codelist.setClickable(true);
        codelist.setOnItemClickListener(new AdapterView.OnItemClickListener() {
            @Override
            public void onItemClick(AdapterView<?> parent, View view, int position, long id) {
                Showcodelist(Codelist.get(position).get("_id"));
            }
        });
    }

    Button.OnClickListener click = new Button.OnClickListener() {
        @Override
        public void onClick(View v) {
            switch (v.getId()) {
                case R.id.closelistbtn:
                    finish();
                    break;
                case R.id.addbtn:
                    Intent addintent = new Intent(CodelistActivity.this, AddCodeActivity.class);
                    startActivityForResult(addintent, 101);
                    break;
                case R.id.clearlistbtn:
                    clearlist();
                    break;
            }
        }
    };

    private void Showcodelist(String selected) {
        AppdataDAO obj = new AppdataDAO(this);
        SQLiteDatabase db = obj.getReadableDatabase();
        int key = Integer.parseInt(selected);
        String sql = "select * from codedata where _id=" + key + " ";
        Cursor cursor = db.rawQuery(sql, null);
        CodelistBean data = new CodelistBean();
        if (cursor.moveToNext()) {
            data.set_id(cursor.getInt(0));
            data.setNote(cursor.getString(1));
            data.setId(cursor.getString(2));
            data.setPassword(cursor.getString(3));
        }
        cursor.close();
        db.close();
        obj.close();
        Pk.setText(data.get_id() + "");
        Noteedit.setText(data.getNote());
        Idedit.setText(data.getId());
        Passwordedit.setText(data.getPassword());

        updatebtn = updateLayout.findViewById(R.id.updateconfirmbtn);
        deletebtn = updateLayout.findViewById(R.id.deleteupdatebtn);
        closeupdatebtn = updateLayout.findViewById(R.id.closeupdatebtn);

        updatebtn.setOnClickListener(updateclick);
        deletebtn.setOnClickListener(updateclick);
        closeupdatebtn.setOnClickListener(updateclick);

        View titleview = inflater.inflate(R.layout.activity_udcustom_view, null);
        AlertDialog.Builder updatewindow = new AlertDialog.Builder(context);
        updatewindow.setCustomTitle(titleview);
        updatewindow.setView(updateLayout);
        updatewindow.setCancelable(false);
        updateDialog = updatewindow.create();
        if (updateLayout.getParent() != null) {
            ((ViewGroup)updateLayout.getParent()).removeView(updateLayout);}
        updateDialog.show();
    }
    Button.OnClickListener updateclick = new Button.OnClickListener() {
        @Override
        public void onClick(View v) {
            switch (v.getId()) {
                case R.id.updateconfirmbtn:
                    Codeupdate();
                    break;
                case R.id.deleteupdatebtn:
                    Codedelete();
                    break;
                case R.id.closeupdatebtn:
                    updateDialog.dismiss();
                    break;
            }
        }
    };
    protected void onActivityResult(int requestCode, int resultCode, Intent data) {
        if (requestCode == 101 | resultCode == 101) {
            showagain();
        }
    }
    public void showagain() {
        AppdataDAO obj = new AppdataDAO(this);
        SQLiteDatabase db = obj.getReadableDatabase();
        String sql = "select * from codedata";
        Cursor cursor = db.rawQuery(sql, null);
        final ArrayList<HashMap<String, String>> Codelist = new ArrayList<>();
        HashMap<String, String> data;
        while (cursor.moveToNext()) {
            data = new HashMap<>();
            data.put("_id", cursor.getString(0));
            data.put("note", cursor.getString(1));
            data.put("id", cursor.getString(2));
            data.put("password", cursor.getString(3));
            Codelist.add(data);
        }
        cursor.close();
        db.close();
        obj.close();
        ListAdapter adapter = new SimpleAdapter(CodelistActivity.this, Codelist, R.layout.code_list_row,
                new String[]{"_id", "note"},
                new int[]{R.id.rowid, R.id.rownote});
        codelist.setAdapter(adapter);
        codelist.setClickable(true);
        codelist.setOnItemClickListener(new AdapterView.OnItemClickListener() {
            @Override
            public void onItemClick(AdapterView<?> parent, View view, int position, long id) {
                Showcodelist(Codelist.get(position).get("_id"));
            }
        });
    }

    private void Codeupdate() {
        AlertDialog.Builder alt_bld = new AlertDialog.Builder(this);
        alt_bld.setMessage("수정하시겠습니까 ?").setCancelable(false)
                .setPositiveButton("No",
                        new DialogInterface.OnClickListener() {
                            @Override
                            public void onClick(DialogInterface dialog, int which) {
                                dialog.cancel();
                            }
                        }).setNegativeButton("Yes",
                new DialogInterface.OnClickListener() {
                    public void onClick(DialogInterface dialog, int id) {
                        CodeupdateDB();
                        dialog.cancel();
                    }
                });
        AlertDialog alert = alt_bld.create();
        alert.setTitle("Update code");
        alert.setIcon(R.drawable.updateicon);
        alert.show();
    }
    private void CodeupdateDB() {
        AppdataDAO obj = new AppdataDAO(this);
        SQLiteDatabase db = obj.getWritableDatabase();
        int key = Integer.parseInt(Pk.getText().toString());
        StringBuilder sql = new StringBuilder();
        sql.append("update codedata set ");
        sql.append("note='" + Noteedit.getText().toString() + "',");
        sql.append("id='" + Idedit.getText().toString() + "',");
        sql.append("password='" + Passwordedit.getText().toString() + "' ");
        sql.append("where _id=" + key + " ");
        db.execSQL(sql.toString());
        db.close();
        obj.close();
        Toast.makeText(context, "Code changed", Toast.LENGTH_SHORT).show();
        updateDialog.dismiss();
        showagain();
    }
    private void Codedelete() {
        AlertDialog.Builder alt_bld = new AlertDialog.Builder(this);
        alt_bld.setMessage("정말로 삭제하시겠습니까?").setCancelable(false)
                .setPositiveButton("No",
                        new DialogInterface.OnClickListener() {
                            @Override
                            public void onClick(DialogInterface dialog, int which) {
                                dialog.cancel();
                            }
                        }).setNegativeButton("Yes",
                new DialogInterface.OnClickListener() {
                    public void onClick(DialogInterface dialog, int id) {
                        CodedeleteDB();
                        dialog.cancel();
                    }
                });
        AlertDialog alert = alt_bld.create();
        alert.setTitle("Delete code");
        alert.setIcon(R.drawable.updateicon);
        alert.show();
    }
    private void CodedeleteDB() {
        AppdataDAO obj = new AppdataDAO(this);
        SQLiteDatabase db = obj.getWritableDatabase();
        int key = Integer.parseInt(Pk.getText().toString());
        StringBuilder sql = new StringBuilder();
        sql.append("delete from codedata ");
        sql.append("where _id=" + key + " ");
        db.execSQL(sql.toString());
        db.close();
        obj.close();
        Toast.makeText(context, "Code deleted", Toast.LENGTH_SHORT).show();
        updateDialog.dismiss();
        showagain();
    }
    private void clearlist() {
        AlertDialog.Builder alt_bld = new AlertDialog.Builder(this);
        alt_bld.setMessage("정말로 목록을 삭제하시겠습니까 ?").setCancelable(false)
                .setPositiveButton("No",
                        new DialogInterface.OnClickListener() {
                            @Override
                            public void onClick(DialogInterface dialog, int which) {
                                dialog.cancel();
                            }
                        }).setNegativeButton("Yes",
                new DialogInterface.OnClickListener() {
                    public void onClick(DialogInterface dialog, int id) {
                        clearlistDB();
                        dialog.cancel();
                    }
                });
        AlertDialog alert = alt_bld.create();
        alert.setTitle("Clear Codelist");
        alert.setIcon(R.drawable.updateicon);
        alert.show();
    }
    private void clearlistDB() {
        AppdataDAO obj = new AppdataDAO(this);
        SQLiteDatabase db = obj.getWritableDatabase();
        String sql = "drop table if exists codedata";
        db.execSQL(sql);
        StringBuilder sb = new StringBuilder();
        sb.append("create table codedata (_id INTEGER PRIMARY KEY AUTOINCREMENT,");
        sb.append("note varchar,id varchar,password varchar)");
        db.execSQL(sb.toString());
        db.close();
        obj.close();
        Toast.makeText(context, "List Cleared", Toast.LENGTH_SHORT).show();
        updateDialog.dismiss();
        showagain();
    }
}
