<CodelistBean.java>
----------------------------------------------------------------------------------------------------------------------------------------
package sudend48.google.com.codebookapp;

public class CodelistBean {

    public int get_id() {
        return _id;
    }

    public void set_id(int _id) {
        this._id = _id;
    }

    private int _id;
    private String Note;
    private String Id;
    private String Password;

    public String getNote() {
        return Note;
    }

    public void setNote(String note) {
        Note = note;
    }

    public String getId() {
        return Id;
    }

    public void setId(String id) {
        Id = id;
    }

    public String getPassword() {
        return Password;
    }

    public void setPassword(String password) {
        Password = password;
    }
}
