<AppdataDAO.java>
----------------------------------------------------------------------------------------------------------------------------------------
package sudend48.google.com.codebookapp;

import android.content.Context;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.database.sqlite.SQLiteOpenHelper;

public class AppdataDAO extends SQLiteOpenHelper {
    private static final String DATABASE_NAME = "appdata.db";
    private static final int DATABASE_VERSION = 1;
    private Context mContext;
    public AppdataDAO(Context context) {
        super(context, DATABASE_NAME, null, DATABASE_VERSION);
        mContext = context;
    }
    //새로 테이블을 생성시
    @Override
    public void onCreate(SQLiteDatabase db) {
        StringBuilder sb = new StringBuilder();
        sb.append("create table codedata (_id INTEGER PRIMARY KEY AUTOINCREMENT,");
        sb.append("note varchar,id varchar,password varchar)");
        db.execSQL(sb.toString());
    }
    //기존의 테이블을 업데이트 할 시(database version을 바꿔줘야 작동)
    @Override
    public void onUpgrade(SQLiteDatabase db, int oldVersion, int newVersion) {
        db.execSQL("create table codedata as select * from cpdata");
        db.execSQL("drop table if exists codedata");
        onCreate(db);
        rewriteCopyMember(db);
        db.execSQL("drop table if exists cpdata");
    }
    private void rewriteCopyMember(SQLiteDatabase db) {
        StringBuilder sb;
        String sql = "select * from cpdata";
        Cursor cursor = db.rawQuery(sql,null);
        while (cursor.moveToNext()) {
            sb = new StringBuilder();
            sb.append("insert into codedata(");
            sb.append("note,id,password");
            sb.append(")values(");
            sb.append("'"+cursor.getString(1)+"',");
            sb.append("'"+cursor.getString(2)+"',");
            sb.append("'"+cursor.getString(3)+"'");
            sb.append(")");
            db.execSQL(sb.toString());
        }
    }
}
