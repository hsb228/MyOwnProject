<AddCodeActivity.java>
----------------------------------------------------------------------------------------------------------------------------------------
package sudend48.google.com.codebookapp;

import android.content.Context;
import android.content.DialogInterface;
import android.content.Intent;
import android.database.sqlite.SQLiteDatabase;
import android.support.v7.app.AlertDialog;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.util.Log;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ImageView;

public class AddCodeActivity extends AppCompatActivity {

    ImageView addconfirmbtn;
    ImageView closeaddbtn;
    EditText Note;
    EditText Id;
    EditText Password;
    Context context;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_add_code);
        addconfirmbtn = findViewById(R.id.addconfirmbtn);
        closeaddbtn = findViewById(R.id.closeaddbtn);
        Note = findViewById(R.id.Note);
        Id = findViewById(R.id.Id);
        Password = findViewById(R.id.Password);
        context = AddCodeActivity.this;
        addconfirmbtn.setOnClickListener(addclick);
        closeaddbtn.setOnClickListener(addclick);
    }
    Button.OnClickListener addclick = new Button.OnClickListener() {
        @Override
        public void onClick(View v) {
            switch (v.getId()) {
                case R.id.addconfirmbtn:
                    Insertcode();
                    break;
                case R.id.closeaddbtn:
                    finish();
                    break;
            }
        }
    };
    private void Insertcode() {
        String chkmsg = "-다음 사항을 입력해주세요!-\n\n";
        if (Note.getText().toString().equals(""))
            chkmsg +="노트\n";
        if (Id.getText().toString().equals(""))
            chkmsg +="아이디\n";
        if (Password.getText().toString().equals(""))
            chkmsg +="비밀번호\n";
        AlertDialog.Builder insertdialog= new AlertDialog.Builder(context);
        if(chkmsg.equals("-다음 사항을 입력해주세요!-\n\n")) {
            insertdialog.setMessage("저장하시겠습니까?");
            insertdialog.setCancelable(false);
            insertdialog.setPositiveButton("취소", new DialogInterface.OnClickListener() {
                @Override
                public void onClick(DialogInterface dialog, int which) {
                    dialog.cancel();
                }
            });
            insertdialog.setNegativeButton("확인", new DialogInterface.OnClickListener() {
                @Override
                public void onClick(DialogInterface dialog, int which) {
                    insertDB();
                }
            });
        } else  {
            insertdialog.setMessage(chkmsg);
            insertdialog.setCancelable(false);
            insertdialog.setPositiveButton("확인", new DialogInterface.OnClickListener() {
                @Override
                public void onClick(DialogInterface dialog, int which) {
                    dialog.cancel();
                    return;
                }
            });
        }
        AlertDialog insertalert = insertdialog.create();
        insertalert.setIcon(R.drawable.updateicon);
        insertalert.show();
    }
    private void insertDB() {
        AppdataDAO obj = new AppdataDAO(this);
        SQLiteDatabase db = obj.getWritableDatabase();
        //입력할 DB 명령어
        StringBuilder sql = new StringBuilder();
        sql.append("insert into codedata(");
        sql.append("note,id,password");
        sql.append(")values(");
        sql.append(" '"+ Note.getText().toString()+"',");
        sql.append(" '"+ Id.getText().toString()+"',");
        sql.append(" '"+ Password.getText().toString()+"'");
        sql.append(")");
        try {
            db.execSQL(sql.toString());
            Intent insertintent = new Intent();
            setResult(101,insertintent);
            finish();
        } catch (Exception e) {
            Log.d("DB insert err:",e.getMessage());
        }
    }
}
